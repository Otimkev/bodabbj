extends layout

block content
 table.table.table-striped
  thead
    tr
      th(scope='col') Full Name
      th(scope='col') Balance
      th(scope='col') Vehicle type
      th(scope='col') Next payment
      th
  tbody
   each bodas in boda
    tr
      td= bodas.fullname
      td= bodas.balance
      td= bodas.vehicle
      td= bodas.next_pay
      td
       a(href=`/sales/panel/${bodas._id}`)
        button(class='btn btn-info') view
