extends main

block content
 table.table.table(style='text-align:center')
  thead
    tr
      th(scope='col') Full Name
      th(scope='col') Balance
      th(scope='col') Vehicle type
      th(scope='col') Next payment
      th
  tbody
    each users in user
     tr
     td= users.username
     td= users.balance
     td= users.vehicle
     td= users.next_pay
     td
       a(href=`/api/user/customer/${users._id}`)
        button(class='btn btn-info') view
 
